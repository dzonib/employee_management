@model EmployeeManagement.ViewModels.HomeDetailsViewModel

@{
    ViewBag.Title = "Employee Details";
}

<div class="row justify-content-center m-3">
    <div class="col-sm-8">
        <div class="card">
            <div class="card-header">
                <h1>@Model.Employee.Name</h1>
            </div>

            <div class="card-body text-center">
                @*asp-append-version= true gives us nice functionality witch caching, if not changed on server, 
                image stays, dont need to download it*@
                <img class="card-img-top" src="~/images/noimage.jpg" asp-append-version="true"/>

                <h4>Employee ID: @Model.Employee.Id</h4>
                <h4>Employee ID: @Model.Employee.Email</h4>
                <h4>Employee ID: @Model.Employee.Department</h4>
            </div>
            <div class="card-footer text-center">
                <a asp-controller="home" asp-action="index" class="btn btn-primary">Back</a>
                <a href="#" class="btn btn-primary">Edit</a>
                <a href="#" class="btn btn-danger">Delete</a>
            </div>
        </div>
    </div>
</div>

@section Scripts  {
    <script src="~/js/CustomScript.js"></script>
}